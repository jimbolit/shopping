<div class = "container">
    <div class = "row">
        <div class = "col-sm-3">
            <div style = "width: 250px;">
                <img  class="guy_shopping img-responsive" src = "guy_shopping.png">
            </div>
        </div>
         <div col-sm-9 class = "page-header">
                <h1 class = "header"> Let's go shopping </h1>
        </div>
    </div>

    <div class = "row">
    <% for category in @categories %>
        <div class ="col-sm-6 card-col">
        <a href="/categories/<%=category[:id]%>">
            <div class="p-wrapper">
                <div class="p-product-img">
                <img src="<%=category[:image]%>" height="294" width="229">
                </div>
                <div class="p-product-info">
                    <div class="p-product-text">
                        <h1 class="card-title" > <%= category[:name]%> </h1>
                    </div>
                </div>
            </div>
            </a>
        </div>
    <% end %>
    </div>
</div>